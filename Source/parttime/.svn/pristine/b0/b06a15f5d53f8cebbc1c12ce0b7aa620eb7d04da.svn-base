.popup table, .popup table th, .popup table td, .popup table tr{
    padding: 10px;
    text-align: center;
}

.popup table table th, .popup table table th {
    font-weight: bold;
}

.popup table textarea, .popup table input[type=text], .popup table select{
    text-align: center;
    background: none;
    background-color: #EBDEDE;
    padding: 5px;
    color: #433C3C;
}

.addrow {
    min-width: 70px;
    padding: 10px;
    color: white;
    background: #086b34;
    border: 0.5px solid black;
}
.addrow:hover {
    background-color: #0BAA12;
    border: 1px solid #CECCCC;
    font-weight: bold;
}

.delrow {
    background-color: #FF0000;
    color: #FFFFFF;
}