 .popup {
    padding: 10px 10px 10px 10px;
    background-color: #FFFFFF;
    border-radius: 10px;
    display: none;
}
.popup > row {
    display: inherit;
    color: #792929;

    padding: 10px;
}
.popup input[type=button], .popup input[type=submit] {
    line-height: 15px;
    min-width: 100px; 
    padding: 10px 20px;
    color: #FFFFFF; 
}

.btn-function {
    width: 100px;
    margin-top: 20px;
    padding: 30px;
    color: #a9a7a7;
    transition: 0.5s ease;
}

.btn-function:hover {
    background: #6C0909;
}

.popup .title{
    font-size: medium;
    padding: 10px 10px;
}
.popup input[type=button]:hover{
    font-weight: bold;
}
.popup .btn_submit {
    background-color: #0029FB;
}
.popup .btn_exit {
    background-color: #FF4200;
}
